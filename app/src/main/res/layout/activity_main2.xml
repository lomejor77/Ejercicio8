<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/btnGoTo"
        android:layout_width="248dp"
        android:layout_height="77dp"
        android:layout_marginTop="68dp"
        android:text="@string/ir_a_la_pagina"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/tvMarquesina"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/tvMarquesina"
        app:layout_constraintTop_toBottomOf="@+id/tvMarquesina" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="248dp"
        android:layout_height="77dp"
        android:layout_marginTop="20dp"
        android:text="@string/salir"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btnGoTo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnGoTo"
        app:layout_constraintTop_toBottomOf="@+id/btnGoTo" />

    <TextView
        android:id="@+id/tvMarquesina"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginTop="28dp"
        android:background="#0D47A1"
        android:ellipsize="marquee"
        android:focusable="false"
        android:hint="@string/texto"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textColorHint="#616161"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>